{
    "editor.minimap.enabled": false,
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000,
    "workbench.iconTheme": "material-icon-theme",
    "workbench.productIconTheme": "IntelliJ",
    "editor.fontFamily": "'UDEV Gothic 35JPDOC'",
    "editor.fontSize": 13,
    // Dark Theme
    // "workbench.colorTheme": "Atom One Dark",
    // "workbench.colorTheme": "Darcula GoLand",
    // Light Theme
    // "workbench.colorTheme": "Eva Light",
    // "workbench.colorTheme": "Gruvbox Light Hard",
    "workbench.colorTheme": "Atom One Light",
    // コメントメッセージの色を変えたい場合
    "editor.tokenColorCustomizations": {
        // # コメントの色を変える
        "comments": "#7f7f7f",
        // 文字列の色を変える　もうちょっと優しい色
        // "strings": "#7f7f7f",
    },
    "editor.autoIndent": "full",
    "editor.cursorBlinking": "solid",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.cursorStyle": "block",
    "editor.fontLigatures": true,
    "editor.formatOnPaste": true,
    "editor.formatOnType": true,
    "editor.letterSpacing": 0.3,
    "editor.lineHeight": 25,
    "editor.multiCursorModifier": "alt",
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "on",
    "editor.tabSize": 2,
    "editor.wordWrap": "off",
    "search.showLineNumbers": true,
    "workbench.colorCustomizations": {},
    "zenMode.centerLayout": true,
    "python.testing.pytestArgs": [
        "."
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "editor.formatOnSave": true,
    // Python設定
    "files.exclude": {
        "**/*.egg-info": true,
        ".gitpod.yml": true,
        "LICENSE": true,
        ".vscode/": false,
        "**/__pycache__": true,
        ".mypy_cache": true,
        "coverage.xml": true,
        ".pytest_cache": true
    },
    "ruff.format.args": [
        "--config=pyproject.toml"
    ],
    "[python]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.fixAll": "never",
            "source.organizeImports": "explicit"
        },
        "editor.defaultFormatter": "charliermarsh.ruff"
    },
    "notebook.formatOnSave.enabled": true,
    "notebook.codeActionsOnSave": {
        "notebook.source.fixAll": "never",
        "notebook.source.organizeImports": "explicit"
    },
    "git.confirmSync": false,
    "jupyter.notebookFileRoot": "${workspaceFolder}",
}